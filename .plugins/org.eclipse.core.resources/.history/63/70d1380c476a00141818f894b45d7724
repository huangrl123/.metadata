<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING/DTD BEAN/EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="analyzeJobService" class="com.dahuangit.seobi.analyzer.service.impl.AnalyzeServiceImpl">
	</bean>

	<bean id="scheduledTerminalJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="analyzeJobService" />
		</property>
		<property name="targetMethod">
			<value>analyzeBaiduOriginarityPercent</value>
		</property>
	</bean>

	<bean id="cronTerminalTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="scheduledTerminalJobDetail" />
		</property>
		<property name="cronExpression">
			<!-- 每周星期天凌晨1点实行一次 -->
			<value>0 0 1 ? * L</value>
		</property>
	</bean>

	<bean id="proxyScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="cronTerminalTrigger" />
			</list>
		</property>
	</bean>

</beans>