		</property>
	</bean>

	<!-- 使用annotation 自动注册bean,并保证@Required,@Autowired的属性被注入 -->
	<context:component-scan base-package="com.dahuangit.seobi"
		name-generator="com.dahuangit.base.utils.CustomBeanNameGenerator" />

	<!-- Spring MVC 配置 -->
	<import resource="mvc-config.xml" />

	<!-- 数据库访问配置 -->
	<import resource="data-access-config.xml" />

	<!-- mina通配 -->
	<import resource="classpath*:/mina/*-config.xml" />

	<!-- 定时任务配置 -->
	<import resource="classpath*:/quartz/*-quartz-config.xml" />

	<!-- castor配置 -->
	<bean id="xmlMarshaller" class="org.springframework.oxm.castor.CastorMarshaller"
		autowire-candidate="true">
		<property name="mappingLocations">
			<list>
				<value>classpath*:/castor/*-castor-mapping.xml</value>
			</list>
		</property>
	</bean>
